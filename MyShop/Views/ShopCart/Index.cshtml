@model ShopCartViewModel

<div class="container">
    @foreach(var el in Model.shopCart.listShopItems)
    {
    <div class="alert alert-warning mt-3">
        <b>Товар :</b> @el.product.name<br />
        <b>Цена :</b>@el.product.price.ToString()
        <p><a class="btn btn-danger" asp-controller="ShopCart" asp-action="RemoveFromCart" asp-route-id="@el.id">Удалить с корзины</a></p>
    </div>
    }
    <hr />
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Завершить</a>
</div>